generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  clerkId       String        @unique
  email         String
  role          Role          @default(USER)
  walletBalance Int           @default(0)
  currentStreak Int           @default(0)

  uploads       Upload[]
  notes         Note[]
  mockTests     MockTest[]
  transactions  RewardTransaction[]
  posts         CommunityPost[]
  comments      Comment[]
  likes         Like[]
}

model Upload {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  fileUrl       String
  fileType      String
  extractedText String?  @db.String
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes         Note[]
}

model Note {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  userId              String   @db.ObjectId
  content             String   @db.String
  topic               String
  generatedFromUploadId String? @db.ObjectId
  createdAt           DateTime @default(now())

  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  upload              Upload?  @relation(fields: [generatedFromUploadId], references: [id])
}

model MockTest {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userId         String   @db.ObjectId
  topic          String
  score          Int
  totalQuestions Int
  weakAreas      Json
  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RewardTransaction {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  amount    Int
  reason    String
  type      TransactionType
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CommunityPost {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @db.ObjectId
  content   String
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes     Like[]
  comments  Comment[]
}

model Comment {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime      @default(now())
  postId    String        @db.ObjectId
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String        @db.ObjectId
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  postId    String        @db.ObjectId
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String        @db.ObjectId
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

enum TransactionType {
  EARN
  SPEND
}
